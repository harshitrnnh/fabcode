html
  head
    title=title
    link(href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css', rel='stylesheet')
  body
    div.container
      div.jumbotron
        h1 Fabcode is tool to build 3d objects through coding!



        if user
          p Welcome, #{user.fullName}
          p
            a.small(href="profile") Edit my profile
          a.btn.btn-primary(href="/logout") Logout
          p
            h4 &nbsp;
          
          if typeof(projectlisting) !== 'undefined'
            p Your previous projects are listed below
              p
                each val, index in projectlisting
                  p
                    a.small(href="/"+nameofUser+"/"+val.nameofProject)=val.nameofProject

            p &nbsp;

          if errors
             each error in errors
               div.alert.alert-danger
                 span #{error.error}
          if saved
             div.alert.alert-success
              span Your profile has been saved
          form.login-form.form-horizontal(method='get', role='form')
            input(name='_csrf', type='hidden', value=csrfToken)

            div.form-group.col-sm-10
              label.col-sm-2 Project Name
              div.col-sm-8
                input.form-control(
                  placeholder='Your New Project Name',
                  required=true,
                  name='projectName',
                  type='text',
                  value=projectName)
            div.form-group.col-sm-1
              div.col-sm-1
                button.login.btn.btn-primary(type='submit') Start new Project

              
        else
          p Welcome to my app, ready to get started?
          p
            a.btn.btn-primary(href="/login") Login now
          p
            span.small Don't have an account?
            span &nbsp;
            a.small(href="/register") Register now